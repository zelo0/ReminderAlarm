<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 가까운 알람 시간 안내 텍스트 -->
                <TextView
                    android:id="@+id/alarmInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="알람 시간을 설정해주세요"
                    android:textAlignment="gravity"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"/>

                <!-- 다음 알람은 N시간 수면 적용하는 버튼 -->
                <Button
                    android:id="@+id/sleepBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N시간 수면 시작"
                    android:layout_marginVertical="30dp"/>


                <!-- 알람 설정 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:divider="?android:dividerHorizontal"
                    android:showDividers="middle">

                    <!-- 매일 울리는 알람 설정 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dailyAlarmLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="매일 울리는 알람 설정"
                            android:layout_marginTop="10dp"/>

                        <TimePicker
                            android:id="@+id/dailyAlarmTimePicker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:timePickerMode="spinner" />

                    </LinearLayout>


                    <!-- N시간 수면 알람 설정 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/timeSleepLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="N시간 수면 시간 설정"
                            android:layout_marginTop="10dp"/>

                        <LinearLayout
                            android:id="@+id/timeSleepBlock"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <!-- 시간 -->
                            <NumberPicker
                                android:id="@+id/nSleepHourPicker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/hourLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="시간" />

                            <!-- 분 -->
                            <NumberPicker
                                android:id="@+id/nSleepMinPicker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/minLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="분" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <!-- N시간 수면 설정 -->

                <Button
                    android:id="@+id/button_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="캘린더 계정 쿼리" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>